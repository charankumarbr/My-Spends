<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lfn_layout_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_bg_screen">

    <include
        layout="@layout/layout_toolbar"
        android:id="@+id/amb_in_toolbar" />

    <ScrollView
        android:id="@+id/amb_layout_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/amb_tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:paddingBottom="16dp"
            android:lineSpacingMultiplier="1.1"
            android:gravity="top|start"
            android:textSize="16sp"
            android:textColor="@color/light_primary_text"
            android:visibility="gone"
            android:textAlignment="viewStart"
            app:fontFamily="@font/source_sans_pro" />
    </ScrollView>

    <TextView
        android:id="@+id/amb_tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:text="Write in below space and save..."
        app:fontFamily="@font/source_sans_pro"
        android:textColor="@color/light_colorAccent"
        android:textSize="15sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/amb_et_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="5"
        android:maxLines="10"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:lineSpacingMultiplier="1.1"
        android:gravity="top|start"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        android:textColor="@color/light_primary_text"
        android:visibility="gone"
        android:hint="Write your message and click DONE to save."
        android:inputType="textCapSentences|textMultiLine|textImeMultiLine"
        app:fontFamily="@font/source_sans_pro" />

</LinearLayout>