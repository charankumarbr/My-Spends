<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lfn_layout_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen">

    <include
        layout="@layout/layout_toolbar"
        android:id="@+id/ar_in_toolbar" />

    <android.support.v7.widget.CardView
        android:id="@+id/ar_cv_current_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ar_in_toolbar"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/ar_tv_current_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Month"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/primary_text"
                    app:fontFamily="@font/notosans_regular" />

                <TextView
                    android:id="@+id/ar_tv_info_current_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ar_tv_current_month"
                    android:textColor="@color/secondary_text"
                    android:paddingTop="3dp"
                    app:fontFamily="@font/source_sans_pro" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:backgroundTint="@color/primary_text"
                    android:backgroundTintMode="src_in" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ar_cv_previous_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ar_cv_current_month"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/ar_tv_previous_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Month"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/primary_text"
                    app:fontFamily="@font/notosans_regular" />

                <TextView
                    android:id="@+id/ar_tv_info_previous_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ar_tv_previous_month"
                    android:textColor="@color/secondary_text"
                    android:paddingTop="3dp"
                    app:fontFamily="@font/source_sans_pro" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:backgroundTint="@color/primary_text"
                    android:backgroundTintMode="src_in" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ar_cv_custom_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ar_cv_previous_month"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/ar_tv_custom_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/primary_text"
                    app:fontFamily="@font/notosans_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose date range."
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ar_tv_custom_date"
                    android:textColor="@color/secondary_text"
                    android:paddingTop="3dp"
                    app:fontFamily="@font/source_sans_pro" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:backgroundTint="@color/primary_text"
                    android:backgroundTintMode="src_in" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/ar_ctextview_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textSize="17sp"
        app:fontFamily="@font/source_sans_pro"
        android:textColor="@color/error"
        android:visibility="gone"
        android:layout_below="@+id/ar_cv_custom_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ProgressBar
        android:id="@+id/ar_progressbar_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ListView
        android:id="@+id/ar_listview_expenses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ar_in_toolbar"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="2dp"
        android:divider="@null"
        android:scrollbars="vertical"
        android:cacheColorHint="@android:color/transparent"
        android:smoothScrollbar="true"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ar_recyclerview_expenses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/ar_in_toolbar"
        android:visibility="gone" />

</RelativeLayout>