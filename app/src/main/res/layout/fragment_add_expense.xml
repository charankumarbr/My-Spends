<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.phoenix.trackmyspends.ui.fragment.AddExpenseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <in.phoenix.trackmyspends.customview.CustomTextView
            android:id="@+id/fae_textview_expense_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:text="Expense for 31 Jan 2017"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            app:fontName="@string/font_noto_sans"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fae_til_expense_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expense Amount"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fae_tiedittext_expense_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:textSize="17sp"/>
        </android.support.design.widget.TextInputLayout>

        <in.phoenix.trackmyspends.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid By:"
            app:fontName="@string/font_noto_sans"
            android:textSize="15sp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/fae_radio_group_payment_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/fae_fblayout_payment_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                app:alignContent="center">

            </com.google.android.flexbox.FlexboxLayout>

        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fae_til_expense_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note"
            android:layout_marginTop="16dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fae_tiedittext_expense_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="80"
                android:textSize="16sp"
                android:inputType="textCapSentences"
                android:imeOptions="actionDone"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fae_button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>