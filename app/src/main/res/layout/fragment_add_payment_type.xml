<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="in.phoenix.myspends.ui.fragment.AddPaymentTypeFragment"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Payment Type"
            android:textColor="@color/light_colorPrimary"
            android:textSize="19sp"
            android:id="@+id/fapt_tv_title"
            android:layout_centerHorizontal="true"
            app:fontFamily="@font/source_sans_pro" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fapt_til_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fapt_tv_title"
            android:layout_marginTop="12dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fapt_tiedittext_type_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="15"
                android:hint="Payment Name"
                android:textSize="16sp"
                android:inputType="textCapWords"
                app:fontFamily="@font/source_sans_pro" />
        </android.support.design.widget.TextInputLayout>

        <!--<TextView
            android:id="@+id/fapt_tv_type_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textSize="15sp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/fapt_til_type_name"
            app:fontFamily="@font/source_sans_pro"/>-->

        <!--<RadioGroup
            android:id="@+id/fapt_radiogroup_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/fapt_tv_type_header">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/fapt_fblayout_payment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                app:alignContent="center">

            </com.google.android.flexbox.FlexboxLayout>
        </RadioGroup>-->
        <Spinner
            android:id="@+id/fapt_spnr_payment_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:dropDownSelector="@color/light_colorAccent"
            android:spinnerMode="dialog"
            android:layout_below="@+id/fapt_til_type_name" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fapt_acbutton_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:text="@string/add"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/fapt_spnr_payment_type"
            app:fontFamily="@font/source_sans_pro" />

        <ProgressBar
            android:id="@+id/fapt_pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

    </RelativeLayout>

</FrameLayout>