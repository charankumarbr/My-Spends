<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.AppRateFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/far_tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate My Spends"
            android:textColor="@color/colorPrimary"
            app:fontFamily="@font/source_sans_pro"
            android:layout_centerHorizontal="true"
            android:textSize="19sp"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/far_layout_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/far_tv_header"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_star_accent_24dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_star_accent_24dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_star_accent_24dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_star_accent_24dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_star_accent_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/far_tv_rate_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            app:fontFamily="@font/source_sans_pro"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="start"
            android:layout_below="@+id/far_layout_star"
            android:textAlignment="viewStart"
            android:text="@string/app_rate_msg" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/far_abutton_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Later"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/far_tv_rate_msg"
            android:layout_toStartOf="@+id/far_abutton_rate_now"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:fontFamily="@font/source_sans_pro" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/far_abutton_rate_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/far_tv_rate_msg"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="Rate Now"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="16dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:fontFamily="@font/source_sans_pro"
            android:layout_marginEnd="12dp" />
    </RelativeLayout>
</FrameLayout>