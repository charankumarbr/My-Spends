<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <in.phoenix.trackmyspends.customview.CustomTextView
            android:id="@+id/fdp_ctextview_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the dates to view your spends"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            app:fontName="@string/font_noto_sans"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fdp_til_from_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/fdp_ctextview_header"
            android:layout_toStartOf="@+id/fdp_imageview_from_date"
            android:layout_marginEnd="12dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/fdp_tiet_from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="From"
                android:textColor="@color/primary_text"
                android:inputType="none"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/fdp_imageview_from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_30dp"
            android:layout_below="@+id/fdp_ctextview_header"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:padding="6dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fdp_til_to_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/fdp_til_from_date"
            android:layout_toStartOf="@+id/fdp_imageview_to_date"
            android:layout_marginEnd="12dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/fdp_tiet_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="To"
                android:textColor="@color/primary_text"
                android:inputType="none"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/fdp_imageview_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_30dp"
            android:layout_below="@+id/fdp_til_from_date"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:padding="6dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fdp_abutton_view_spends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fdp_til_to_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="View My Spends"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>
    </RelativeLayout>

</FrameLayout>
