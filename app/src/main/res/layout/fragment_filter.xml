<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.phoenix.myspends.ui.fragment.FilterFragment"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <in.phoenix.myspends.customview.CustomTextView
                android:id="@+id/ff_ctextview_date_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select the dates to view your spends"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                app:fontName="@string/font_noto_sans" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ff_til_from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/ff_ctextview_date_header"
                android:layout_toStartOf="@+id/ff_imageview_from_date"
                android:layout_marginEnd="12dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ff_tiet_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="From"
                    android:textColor="@color/primary_text"
                    android:inputType="none" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/ff_imageview_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_30dp"
                android:layout_below="@+id/ff_ctextview_date_header"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:padding="6dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ff_til_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/ff_til_from_date"
                android:layout_toStartOf="@+id/ff_imageview_to_date"
                android:layout_marginEnd="12dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ff_tiet_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="To"
                    android:textColor="@color/primary_text"
                    android:inputType="none" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/ff_imageview_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_30dp"
                android:layout_below="@+id/ff_til_from_date"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:padding="6dp" />

            <in.phoenix.myspends.customview.CustomTextView
                android:id="@+id/ff_ctextview_paidby_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select the paid by to filter your spends"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                app:fontName="@string/font_noto_sans"
                android:layout_below="@+id/ff_imageview_to_date"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/ff_fblayout_payment_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignItems="center"
                app:flexWrap="wrap"
                app:alignContent="center"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/ff_ctextview_paidby_header"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ff_abutton_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Reset"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/ff_fblayout_payment_mode"
                android:layout_toStartOf="@+id/ff_abutton_view_spends"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ff_abutton_view_spends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ff_fblayout_payment_mode"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:text="View My Spends"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
