<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/ff_ctextview_date_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select the dates to view your spends"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/light_colorPrimary"
                app:fontFamily="@font/source_sans_pro" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ff_til_from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/ff_ctextview_date_header"
                android:layout_toStartOf="@+id/ff_imageview_from_date"
                android:layout_marginEnd="12dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ff_tiet_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="From"
                    android:textColor="@color/light_primary_text"
                    android:inputType="none"
                    app:fontFamily="@font/source_sans_pro"
                    android:gravity="start"
                    android:textAlignment="viewStart" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/ff_imageview_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_30dp"
                android:layout_below="@+id/ff_ctextview_date_header"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:padding="6dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ff_til_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/ff_til_from_date"
                android:layout_toStartOf="@+id/ff_imageview_to_date"
                android:layout_marginEnd="12dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ff_tiet_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="To"
                    android:textColor="@color/light_primary_text"
                    android:inputType="none"
                    app:fontFamily="@font/source_sans_pro"
                    android:gravity="start"
                    android:textAlignment="viewStart" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/ff_imageview_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_30dp"
                android:layout_below="@+id/ff_til_from_date"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:padding="6dp" />

            <TextView
                android:id="@+id/ff_ctextview_paidby_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select the paid by to filter your spends"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="@color/light_colorPrimary"
                app:fontFamily="@font/source_sans_pro"
                android:layout_below="@+id/ff_imageview_to_date" />

            <Spinner
                android:id="@+id/ff_spnr_paid_by"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:dropDownSelector="@color/light_colorAccent"
                android:spinnerMode="dialog"
                android:layout_below="@+id/ff_ctextview_paidby_header" />

            <TextView
                android:id="@+id/ff_ctextview_category_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select the category to filter your spends"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="@color/light_colorPrimary"
                app:fontFamily="@font/source_sans_pro"
                android:layout_below="@+id/ff_spnr_paid_by" />

            <Spinner
                android:id="@+id/ff_spnr_category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:dropDownSelector="@color/light_colorAccent"
                android:spinnerMode="dialog"
                android:layout_below="@+id/ff_ctextview_category_header" />

            <CheckBox
                android:id="@+id/ff_checkbox_group_category"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/groupby_category"
                android:textColor="@color/light_primary_text"
                app:fontFamily="@font/source_sans_pro"
                android:layout_below="@+id/ff_spnr_category"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ff_abutton_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Reset"
                android:textAllCaps="true"
                android:textColor="@color/light_colorAccent"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/ff_checkbox_group_category"
                android:layout_toStartOf="@+id/ff_abutton_view_spends"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:fontFamily="@font/source_sans_pro" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ff_abutton_view_spends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ff_checkbox_group_category"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:text="View My Spends"
                android:textAllCaps="true"
                android:textColor="@color/light_colorAccent"
                android:layout_marginBottom="16dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:fontFamily="@font/source_sans_pro" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>