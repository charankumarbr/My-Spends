<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <in.phoenix.myspends.customview.CustomTextView
            android:id="@+id/fpb_ctextview_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the paid by to filter your spends"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            app:fontName="@string/font_noto_sans" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fpb_fblayout_payment_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:alignItems="center"
            app:flexWrap="wrap"
            app:alignContent="center"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/fpb_ctextview_header"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fpb_abutton_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Done"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:layout_marginEnd="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/fpb_fblayout_payment_mode"
            android:layout_alignParentEnd="true"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fpb_abutton_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Reset"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:layout_marginEnd="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/fpb_fblayout_payment_mode"
            android:layout_toStartOf="@+id/fpb_abutton_done"/>
    </RelativeLayout>
</FrameLayout>
