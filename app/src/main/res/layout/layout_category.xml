<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lc_tv_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/colorAccent"
        app:fontFamily="@font/source_sans_pro"
        android:text="Total Spends"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/lc_tv_grand_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/colorAccent"
        app:fontFamily="@font/source_sans_pro"
        android:text="100000"
        android:visibility="gone"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lc_tv_category_name"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintEnd_toStartOf="@id/lc_tv_category_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lc_tv_month"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="Travel"
        android:gravity="start"
        android:textAlignment="viewStart"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lc_tv_category_total"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/primary_text"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lc_tv_month"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="69.51"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lc_tv_category_percentage"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lc_tv_category_total"
        android:layout_marginStart="10dp"/>

    <View
        android:id="@+id/lc_v_percent"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/lc_tv_category_percentage"
        app:layout_constraintTop_toBottomOf="@+id/lc_tv_category_percentage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <Space
        android:id="@+id/lc_view_sep"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/lc_v_percent"/>

</android.support.constraint.ConstraintLayout>