<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_currency_selection">

    <in.charanbr.expensetracker.customview.CustomTextView
        android:id="@+id/lc_ctextview_code"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="19sp"
        android:text="INR"
        android:layout_marginStart="16dp"
        android:textColor="@color/primary_text"
        app:fontName="@string/font_noto_sans"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textStyle="bold"/>

    <in.charanbr.expensetracker.customview.CustomTextView
        android:id="@+id/lc_ctextview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Indian National Rupee (INR)"
        android:layout_toEndOf="@+id/lc_ctextview_code"
        android:textSize="19sp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/primary_text"
        app:fontName="@string/font_noto_sans"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>
</RelativeLayout>