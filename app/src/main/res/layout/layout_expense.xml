<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/le_rlayout_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/le_tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="21sp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorAccent"
            app:fontFamily="@font/source_sans_pro"
            android:visibility="gone"
            android:text="Spends Chart" />

        <TextView
            android:id="@+id/le_tv_grand_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/colorAccent"
            app:fontFamily="@font/source_sans_pro"
            android:visibility="gone"
            android:layout_alignBaseline="@+id/le_tv_month"
            android:layout_toEndOf="@+id/le_tv_month"
            android:gravity="end"
            android:text="100000" />

        <android.support.v7.widget.CardView
            android:id="@+id/le_layout_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/le_tv_month"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="2dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:cardBackgroundColor="@android:color/white"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp">

                <!--<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toStartOf="@+id/le_layout_end"
                    android:layout_alignParentStart="true">-->

                <TextView
                    android:id="@+id/le_textview_payment_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/primary_text"
                    android:text="Lunch"
                    android:layout_toStartOf="@+id/le_textview_amount"
                    android:gravity="start"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/le_textview_payment_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:fontFamily="@font/source_sans_pro"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:ellipsize="end"
                    android:text="Cash"
                    android:layout_toStartOf="@+id/le_textview_date"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:layout_alignBaseline="@+id/le_textview_date" />
                <!--</LinearLayout>

                <LinearLayout
                    android:id="@+id/le_layout_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp">-->

                <TextView
                    android:id="@+id/le_textview_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    app:fontFamily="@font/source_sans_pro"
                    android:layout_gravity="end"
                    android:text="300.00"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/le_textview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="8dp"
                    app:fontFamily="@font/source_sans_pro"
                    android:text="10 Apr"
                    android:layout_below="@id/le_textview_amount"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/le_textview_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:fontFamily="@font/source_sans_pro"
                    android:textColor="@android:color/white"
                    android:text="Bills and Payments"
                    android:layout_below="@id/le_textview_date"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorAccent"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginTop="6dp" />
                <!--</LinearLayout>-->
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/le_layout_loading"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            app:fontFamily="@font/source_sans_pro"
            android:textColor="@color/colorPrimary" />

        <ProgressBar
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/le_tv_spends_end"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:text="@string/spends_list_end"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_light_bulb"
        android:drawableEnd="@drawable/ic_light_bulb"
        android:drawablePadding="16dp"
        android:layout_below="@+id/le_rlayout_expense"
        app:fontFamily="@font/source_sans_pro"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/le_layout_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/le_rlayout_expense"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/le_tv_category_name"
            android:textSize="15sp"
            android:textColor="@color/primary_text"
            app:fontFamily="@font/source_sans_pro"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/le_tv_category_total" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/le_tv_category_total"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:textColor="@color/primary_text"
            app:fontFamily="@font/source_sans_pro"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/le_tv_category_percentage"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            app:fontFamily="@font/source_sans_pro"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/le_tv_category_total" />

        <View
            android:id="@+id/le_v_percent"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/le_tv_category_percentage"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp" />
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:id="@+id/le_v_space"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/le_rlayout_expense"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:layout_marginTop="10dp" />
</RelativeLayout>