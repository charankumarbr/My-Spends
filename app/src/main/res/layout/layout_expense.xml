<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/le_rlayout_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <in.phoenix.myspends.customview.CustomTextView
            android:id="@+id/le_tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="23sp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/colorAccent"
            app:fontName="@string/font_noto_sans"
            android:layout_marginTop="10dp"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/le_layout_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/le_tv_month"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/le_layout_end"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp">

                <in.phoenix.myspends.customview.CustomTextView
                    android:id="@+id/le_textview_payment_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginBottom="8dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:fontName="@string/font_noto_sans"
                    android:textColor="@color/primary_text"/>

                <in.phoenix.myspends.customview.CustomTextView
                    android:id="@+id/le_textview_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:fontName="@string/font_noto_sans"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:ellipsize="end"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/le_layout_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp">

                <in.phoenix.myspends.customview.CustomTextView
                    android:id="@+id/le_textview_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimary"
                    app:fontName="@string/font_noto_sans"
                    android:layout_gravity="right"/>

                <in.phoenix.myspends.customview.CustomTextView
                    android:id="@+id/le_textview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="8dp"
                    app:fontName="@string/font_noto_sans"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/le_layout_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="36dp"
            android:layout_height="36dp"/>

        <in.phoenix.myspends.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            app:fontName="@string/font_noto_sans"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <in.phoenix.myspends.customview.CustomTextView
        android:id="@+id/le_tv_spends_end"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:text="Light at the end of tunnel."
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_light_bulb"
        android:drawableLeft="@drawable/ic_light_bulb"
        android:drawablePadding="16dp"
        android:layout_below="@+id/le_rlayout_expense"
        app:fontName="@string/font_noto_sans"
        android:visibility="gone"/>

</RelativeLayout>