<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/lpt_switch_active"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/lpt_textview_ptype_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="17sp"
            app:fontFamily="@font/source_sans_pro"
            android:textColor="@color/light_primary_text"
            android:text="Select Payment Type" />

        <TextView
            android:id="@+id/lpt_textview_ptype_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:fontFamily="@font/source_sans_pro"
            android:textColor="@color/light_secondary_text"
            android:text="Payment Type" />
    </LinearLayout>

    <Switch
        android:id="@+id/lpt_switch_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp" />

    <!--<in.charanbr.expensetracker.customview.CustomTextView
        android:id="@+id/lpt_ctextview_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/lpt_textview_ptype_name"
        android:layout_below="@+id/lpt_textview_ptype_name"
        android:textColor="@color/light_secondary_text"
        android:layout_marginBottom="10dp"
        app:fontFamily="@font/source_sans_pro"/>-->

</RelativeLayout>